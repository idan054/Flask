{
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "includeFiles": "credentials.json"
    },
    "api/addRow.py": {
      "includeFiles": "credentials.json"
    }
  },

      "builds": [
        {"src": "app/index.py", "use": "@vercel/python"},
        {"src": "app/data/*.json", "use": "@vercel/static"}
    ],
    "routes": [{"src": "/(.*)", "dest": "app/index.py"}]
}
